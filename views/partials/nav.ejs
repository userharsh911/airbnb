<link rel="stylesheet" href="/output.css">
</head>

<body>
    <nav class="bg-white shadow-lg sticky top-0 z-50 backdrop-blur-sm">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16 items-center">
                <!-- Logo -->
                <div class="flex-shrink-0 flex items-center">
                    <a href="/" class="flex items-center space-x-3 hover:scale-105 transition-transform duration-200">
                        <svg class="h-9 w-9 text-rose-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 3l9.5 16.5a1 1 0 01-.87 1.5H3.37a1 1 0 01-.87-1.5L12 3z" />
                            <circle cx="12" cy="13" r="3" stroke="currentColor" stroke-width="2" fill="none"/>
                        </svg>
                        <span class="text-2xl font-extrabold text-rose-500 tracking-tight hover:text-rose-600">Airbnb</span>
                    </a>
                </div>

                <!-- Nav Links -->
                <div class="hidden lg:flex items-center space-x-6">
                    <% if(isLoggedIn){ %>
                        <% if(user.userType=='guest') {%>
                            <a href="/home" class="text-gray-700  px-3 py-2 rounded-md text-base font-medium transition-colors duration-200 <%= currentPage==='Home' ? 'bg-red-400 text-white' : 'hover:text-indigo-600'  %> ">Home</a>
                        <a href="/favourites" class="text-gray-700 px-3 py-2 rounded-md text-base font-medium transition-colors duration-200 <%= currentPage==='Favourites' ? 'bg-red-400 text-white' : 'hover:text-indigo-600'  %> ">Favourites</a>
                        <a href="/bookings" class="text-gray-700 px-3 py-2 rounded-md text-base font-medium transition-colors duration-200 <%= currentPage==='bookings' ? 'bg-red-400 text-white' : 'hover:text-indigo-600'  %> ">Bookings</a>
                        <% }else{ %>
                            <a href="/host/add-home" class="text-gray-700 px-3 py-2 rounded-md text-base font-medium transition-colors duration-200 <%= currentPage==='addHome' ? 'bg-blue-400 text-white' : 'hover:text-indigo-600'  %>">Add Home</a>
                        <a href="/host/host-home-list" class="text-gray-700 px-3 py-2 rounded-md text-base font-medium transition-colors duration-200 <%= currentPage==='host-homes' ? 'bg-blue-400 text-white' : 'hover:text-indigo-600'  %> ">Host Home</a>
                        <% } %>
                        <form action="/auth/logout"  method="post">
                            <input type="submit" class="text-gray-700 px-3 py-2 rounded-md text-base font-medium transition-colors duration-200 hover:text-indigo-600 cursor-pointer" value="Logout">
                        </form>
                        <div class="w-8 h-8 rounded-full bg-rose-500 text-white flex items-center justify-center font-semibold">
                            <%= user.firstName[0].toUpperCase()%>
                        </div>
                    <% }else{ %>
                        <a href="/auth/login" class="text-gray-700 px-3 py-2 rounded-md text-base font-medium transition-colors duration-200 <%= currentPage==='Login' ? 'bg-blue-400 text-white' : 'hover:text-indigo-600'  %>">Login</a>
                        <a href="/auth/signup" class="text-gray-700 px-3 py-2 rounded-md text-base font-medium transition-colors duration-200 <%= currentPage==='signup' ? 'bg-blue-400 text-white' : 'hover:text-indigo-600'  %>">Signup</a>
                    <%}%>
                </div>

                <!-- Mobile menu button -->
                <div class="lg:hidden">
                    <button id="mobile-menu-button" class="p-2 rounded-md hover:bg-gray-100 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-rose-400">
                        <svg class="h-7 w-7 text-gray-700" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16"/>
                        </svg>
                    </button>
                </div>
            </div>
        </div>

        <!-- Mobile menu -->
        <div id="mobile-menu" class="lg:hidden fixed inset-0 bg-black/50 backdrop-blur-sm z-50 hidden">
            <div class="absolute top-0 right-0 w-4/5 max-w-xs min-h-screen bg-white shadow-2xl rounded-l-2xl flex flex-col py-6 px-6 animate-slideIn">
                <div class="flex justify-between items-center mb-8">
                    <span class="text-2xl font-extrabold text-rose-500">Menu</span>
                    <button id="mobile-menu-close" class="p-2 rounded-full hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-rose-400">
                        <svg class="h-6 w-6 text-gray-700" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
                        </svg>
                    </button>
                </div>
                <div class="flex flex-col gap-2">
                    <% if(isLoggedIn){ %>
                        <% if(user.userType=='guest') {%>
                            <a href="/home" class="mobile-nav-link <%= currentPage==='Home' ? 'bg-rose-500 text-white' : ''  %>">Home</a>
                            <a href="/favourites" class="mobile-nav-link <%= currentPage==='Favourites' ? 'bg-rose-500 text-white' : ''  %>">Favourites</a>
                            <a href="/bookings" class="mobile-nav-link <%= currentPage==='bookings' ? 'bg-rose-500 text-white' : ''  %>">Bookings</a>
                        <% } else { %>
                            <a href="/host/add-home" class="mobile-nav-link <%= currentPage==='addHome' ? 'bg-rose-500 text-white' : ''  %>">Add Home</a>
                            <a href="/host/host-home-list" class="mobile-nav-link <%= currentPage==='host-homes' ? 'bg-rose-500 text-white' : ''  %>">Host Home</a>
                        <% } %>
                        <form action="/auth/logout" method="post" class="mt-2">
                            <input type="submit" class="mobile-nav-link cursor-pointer" value="Logout">
                        </form>
                        <div class="mt-4 flex items-center gap-3">
                            <div class="w-9 h-9 rounded-full bg-rose-500 text-white flex items-center justify-center font-semibold text-lg">
                                <%= user.firstName[0].toUpperCase()%>
                            </div>
                            <span class="font-medium text-gray-700"><%= user.firstName %></span>
                        </div>
                    <% }else{ %>
                        <a href="/auth/login" class="mobile-nav-link <%= currentPage==='Login' ? 'bg-blue-400 text-white' : ''  %>">Login</a>
                        <a href="/auth/signup" class="mobile-nav-link <%= currentPage==='signup' ? 'bg-blue-400 text-white' : ''  %>">Signup</a>
                    <%}%>
                </div>
            </div>
        </div>
    </nav>

    <style>
        @keyframes slideIn {
            from { transform: translateX(100%);}
            to { transform: translateX(0);}
        }
        .animate-slideIn {
            animation: slideIn 0.3s cubic-bezier(0.4,0,0.2,1);
        }
        .mobile-nav-link {
            display: block;
            padding: 0.75rem 1rem;
            border-radius: 0.5rem;
            font-size: 1rem;
            font-weight: 500;
            color: #374151;
            transition: all 0.2s;
        }
        .mobile-nav-link:hover {
            background-color: #fff1f2;
            color: #e11d48;
        }
    </style>

    <script>
        const btn = document.getElementById('mobile-menu-button');
        const menu = document.getElementById('mobile-menu');
        const closeBtn = document.getElementById('mobile-menu-close');

        btn.addEventListener('click', () => {
            menu.classList.remove('hidden');
        });

        closeBtn.addEventListener('click', () => {
            menu.classList.add('hidden');
        });

        // Optional: Close menu when clicking outside
        menu.addEventListener('click', (e) => {
            if (e.target === menu) {
                menu.classList.add('hidden');
            }
        });
    </script>