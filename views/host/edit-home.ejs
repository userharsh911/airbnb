<%- include('../partials/head') %>
<%- include('../partials/nav') %>
    <div class="flex items-center justify-center min-h-screen bg-blue-50">
        <div class="bg-white rounded-lg shadow-lg p-8 w-full max-w-md">
            <h2 class="text-2xl font-bold text-blue-700 mb-6 text-center"><%= editing ? 'Edit' : 'Add'%> Your House</h2>
            <form action="/host/<%= editing ? 'host-home-list' : 'add-home'%>" method="post" class="space-y-4">
                <input type="hidden" name="id" value="<%= editing ? house._id : ''%>" >
                <input
                    type="text"
                    name="HouseName"
                    value="<%= editing ? house.HouseName : ''%>"
                    placeholder="Add your House name"
                    class="w-full px-4 py-2 border border-blue-200 rounded focus:outline-none focus:ring-2 focus:ring-blue-400"
                    required
                />
                <input type="text"
                    name="Location"
                    value="<%= editing ? house.Location : ''%>"
                    placeholder="Enter Location"
                    class="w-full px-4 py-2 border border-blue-200 rounded focus:outline-none focus:ring-2 focus:ring-blue-400"
                    required />
                <input type="text"
                    name="Price"
                    placeholder="Enter Price"
                    value="<%= editing ? house.Price : ''%>"
                    class="w-full px-4 py-2 border border-blue-200 rounded focus:outline-none focus:ring-2 focus:ring-blue-400"
                    required />
                <input type="text"
                    name="photoUrl"
                    placeholder="Enter image URL"
                    value="<%= editing ? house.photoUrl : ''%>"
                    class="w-full px-4 py-2 border border-blue-200 rounded focus:outline-none focus:ring-2 focus:ring-blue-400"
                    required />
                    <textarea 
                    name="Description"
                    placeholder="Enter your description about house..."
                    class="w-full px-4 py-2 border border-blue-200 rounded focus:outline-none focus:ring-2 focus:ring-blue-400"
                    required
                    id=""><%= house.Description %></textarea>
                <button
                    type="submit"
                    class="w-full bg-blue-600 hover:cursor-pointer text-white font-semibold py-2 rounded hover:bg-blue-700 transition"
                >
                    <%= editing ? 'Update' : 'Submit'%>
                </button>
            </form>
        </div>
    </div>
</body>
</html>