<%- include('../partials/head') %>
<%- include('../partials/nav') %>
    <div class="flex items-center justify-center min-h-screen bg-blue-50">
        <div class="bg-white rounded-lg shadow-lg p-8 w-full max-w-md">
            <h2 class="text-2xl font-bold text-blue-700 mb-6 text-center">Register your account here :</h2>
            <div>
                <ul>
                    <% errors.forEach(errMsg=>{ %>
                        <li><%= errMsg %></li>
                    <% }) %>
                </ul>
            </div>
            <form action="/auth/signup" method="post" class="space-y-4">
                <input
                    type="text"
                    name="firstName"
                    placeholder="Enter your name"
                    value="<%= oldVal ? oldVal.firstName : '' %>"
                    class="w-full px-4 py-2 border border-blue-200 rounded focus:outline-none focus:ring-2 focus:ring-blue-400"
                    required
                />
                <input
                    type="text"
                    name="lastName"
                    value="<%= oldVal ? oldVal.lastName : '' %>"
                    placeholder="Enter your last name"
                    class="w-full px-4 py-2 border border-blue-200 rounded focus:outline-none focus:ring-2 focus:ring-blue-400"
                />
                <input
                    type="email"
                    name="email"
                    placeholder="example@ex.com"
                    value="<%= oldVal ? oldVal.email : '' %>"
                    class="w-full px-4 py-2 border border-blue-200 rounded focus:outline-none focus:ring-2 focus:ring-blue-400"
                    required
                />
                <input 
                    type="password"
                    name="password"
                    placeholder="Enter your password"
                    class="w-full px-4 py-2 border border-blue-200 rounded focus:outline-none focus:ring-2 focus:ring-blue-400"
                    required 
                />
                <input 
                    type="password"
                    name="confirmPassword"
                    placeholder="confirm your password"
                    class="w-full px-4 py-2 border border-blue-200 rounded focus:outline-none focus:ring-2 focus:ring-blue-400"
                    required 
                />

                <div>
                    <label for="guest"><input type="radio" name="userType" id="guest" value="guest" required <%= oldVal.userType=="guest" ? 'checked' : '' %> /><span> Guest</span></label>
                    <label for="host"><input type="radio" name="userType" id="host" value="host" required <%= oldVal.userType=="host" ? 'checked' : '' %>/><span> Host</span></label>
                </div>
                <div>
                    <label for="termNcondition"><input type="checkbox" id="termNcondition" name="termNcondition" required>
                        <span>I accept the term & conditions</span>
                    </label>
                </div>
                
                <button
                    type="submit"
                    class="w-full bg-blue-600 hover:cursor-pointer text-white font-semibold py-2 rounded hover:bg-blue-700 transition"
                >
                    Register
                </button>
            </form>
        </div>
    </div>
</body>
</html>