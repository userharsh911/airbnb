<%- include('../partials/head') %>
<%- include('../partials/nav') %>
    <div class="min-h-screen bg-gradient-to-br from-blue-100 via-white to-red-100 py-12">
        <div class="max-w-4xl mx-auto">
            <h1 class="text-5xl font-extrabold text-blue-800 mb-8 text-center drop-shadow-lg tracking-tight">
                Welcome to <span class="text-red-500"></span> Home Page
            </h1>
            <!-- <div class="flex justify-center mb-10">
                <a href="/host/add-home" class="px-8 py-3 bg-gradient-to-r from-blue-600 to-red-500 text-white rounded-full shadow-lg hover:from-blue-700 hover:to-red-600 transition font-semibold text-lg ring-2 ring-blue-200 hover:ring-red-200">
                    Go to Add Home
                </a>
            </div> -->
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-8 px-4">
                <% houseData.forEach(house => { %>
                    <div class="bg-white rounded-2xl shadow-xl p-7 flex flex-col items-center border-2 border-blue-100 hover:border-red-200 transition-all duration-300 group">
                        <div class="w-36 h-36 mb-5 rounded-2xl overflow-hidden shadow-lg border-4 border-blue-300 group-hover:border-red-400 transition-all duration-300">
                            <img src="<%= house.photoUrl %>" alt="House Image" class="w-full h-full object-cover group-hover:scale-105 group-hover:brightness-95 transition-all duration-300">
                        </div>
                        <div class="text-2xl font-bold text-blue-900 mb-1 group-hover:text-red-500 transition">
                            <%= house.HouseName %>
                        </div>
                        <div class="text-base text-gray-600 mb-2 flex items-center">
                            <svg class="w-5 h-5 mr-2 text-blue-400 group-hover:text-red-400 transition" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 12.414a4 4 0 10-5.657 5.657l4.243 4.243a8 8 0 1011.314-11.314l-4.243 4.243z"></path>
                            </svg>
                            <span class="font-medium"><%= house.Location %></span>
                        </div>
                        <div class="text-xl text-green-600 font-semibold mb-2">
                            â‚¹ <%= house.Price %> <span class="text-gray-500 text-base font-normal">/ night</span>
                        </div>
                        <div class="bg-blue-500 px-10 py-2 rounded-3xl hover:cursor-pointer">
                            <a class="text-white font-semibold" href="/home/<%= house['_id'] %>">Details</a>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</body>
</html>