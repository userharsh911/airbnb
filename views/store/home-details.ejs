<%- include('../partials/head') %>
    <%- include('../partials/nav') %>
        <div class="min-h-screen bg-gradient-to-br from-blue-100 via-white to-red-100 py-12">
            <div class="max-w-4xl mx-auto">
                <h1 class="text-5xl font-extrabold text-blue-800 mb-8 text-center drop-shadow-lg tracking-tight">
                    Welcome to Details Page
                </h1>
                <div class="flex justify-center">
                    <div
                        class="bg-white rounded-3xl shadow-2xl p-8 border-2 border-blue-100 hover:border-red-200 transition-all duration-300 group max-w-3xl w-full">
                        <div class="flex flex-col md:flex-row items-center gap-8">
                            <!-- Image Section -->
                            <div class="flex-1 flex justify-center items-center">
                                <div
                                    class="w-full max-w-[320px] aspect-square rounded-2xl overflow-hidden shadow-lg border-4 border-blue-300 group-hover:border-red-400 transition-all duration-300">
                                    <img src="<%= pageData.photoUrl %>" alt="House Image"
                                        class="w-full h-full object-cover group-hover:scale-105 group-hover:brightness-95 transition-all duration-300" />
                                </div>
                            </div>
                            <!-- Details Section -->
                            <div class="flex-1 flex flex-col justify-center items-start w-full space-y-3">
                                <div class="text-sm text-gray-400 uppercase tracking-wider">House Name</div>
                                <div class="text-3xl font-extrabold text-blue-900 mb-1 ">
                                    <%= pageData.HouseName %>
                                </div>
                                <hr class="w-full border-t border-gray-200 my-2" />
                                <div class="text-sm text-gray-400 uppercase tracking-wider">House Location</div>
                                <div class="text-3xl font-extrabold text-blue-900 mb-1">
                                    <%= pageData.Location %>
                                </div>
                                <hr class="w-full border-t border-gray-200 my-2" />
                                <div class="text-sm text-gray-400 uppercase tracking-wider">Price</div>
                                <div class="text-2xl text-green-600 font-semibold">
                                    â‚¹ <%= pageData.Price %> <span class="text-gray-500 text-base font-normal">/ night</span>
                                </div>
                                
                                <div>
                                    <form action="/favourites/home-details/<%= pageData['_id'] %>" method="post">
                                        <button class="bg-red-400 py-3 px-6 rounded-3xl font-semibold text-xl hover:text-white hover:cursor-pointer hover:bg-red-500" type="submit">Add to Favourites</button>
                                    </form>
                                </div>
                                
                            </div>
                        </div>
                        <div class="w-full pt-5">
                            <div class="text-2xl text-gray-400 uppercase tracking-wider mb-1">Description</div>
                            <div class="text-base text-gray-700 leading-relaxed bg-blue-50 rounded-xl p-4 shadow-inner">
                                <%= pageData.Description %>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        </div>
        </body>

        </html>